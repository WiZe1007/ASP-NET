<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <!-- Заголовок сторінки динамічно встановлюється, додаючи назву завдання -->
    <title>@ViewData["Title"] - Завдання 3 (Lab 5)</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Підключення Bootstrap через CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
</head>
<body class="@ViewBag.BodyClass">
    <!-- Простенька навігаційна панель -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="@Url.Action("Index", "Triangle")">Завдання 3 (Lab 5)</a>
    </nav>

    <!-- Основна частина вмісту сторінки -->
    <main class="container">
        @RenderBody()
    </main>

    <!-- Футер, який завжди залишається внизу -->
    <footer class="footer bg-dark text-white text-center p-3">
        <div class="container">
            &copy; 2025 Lab 5
        </div>
    </footer>

    <!-- Підключення jQuery і Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
