@model List<Task_3.Models.Message>
@{
    ViewData["Title"] = "Inbox";
}
<div class="form-card animate__fadeIn">
    <h2>Вхідні повідомлення</h2>
    @if (!Model.Any())
    {
        <p>немає</p>
    }
    else
    {
        <ul class="list-group">
            @foreach (var m in Model)
            {
                <li class="list-group-item">
                    <a asp-action="Details" asp-route-id="@m.Id">
                        <strong>@m.SentAt:g</strong> від <strong>@m.From</strong> — @m.Theme
                    </a>
                </li>
            }
        </ul>
    }
</div>
