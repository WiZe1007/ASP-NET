@{
    // Використовуємо загальний макет сторінки
    Layout = "~/Views/Shared/_Layout.cshtml";
    // Встановлюємо заголовок для цієї сторінки
    ViewData["Title"] = "Введіть пароль для пошуку";
    // Задаємо CSS-клас для фону (bg1)
    ViewBag.BodyClass = "bg1";
}
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="form-box">
            <!-- Заголовок форми -->
            <h2 class="text-center">Введіть пароль</h2>
            @if (ViewBag.Error != null)
            {
                <!-- Якщо є помилка, відображаємо повідомлення -->
                <div class="alert alert-danger">@ViewBag.Error</div>
            }
            <form asp-action="Password" method="post">
                <div class="form-group">
                    <label for="password">Пароль:</label>
                    <input type="text" class="form-control" id="password" name="password" placeholder="Введіть пароль" required />
                </div>
                <!-- Кнопка для переходу до наступного кроку -->
                <button type="submit" class="btn btn-primary btn-block">Далі</button>
            </form>
        </div>
    </div>
</div>
